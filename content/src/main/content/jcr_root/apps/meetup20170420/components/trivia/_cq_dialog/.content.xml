<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Trivia Setup"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <randomFactsTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Facts"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <facts
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                fieldDescription="One random fact will be displayed."
                                fieldLabel="Collection of facts">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                    name="./facts"/>
                            </facts>
                        </items>
                    </columns>
                </items>
            </randomFactsTab>
            <ImageTab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Random Image"
                    sling:resourceType="granite/ui/components/foundation/container">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <image
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                    fileNameParameter="./image/fileName"
                                    fileReferenceParameter="./image/fileReference"
                                    mimeTypes="[image]"
                                    multiple="false"
                                    name="./image/file"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="true"
                                    fieldDescription="This image will be shown 'on occasion'."
                                    fieldLabel="Random Image">

                            </image>
                            <imageResType
                                    jcr:primaryType="nt:unstructured"
                                    name="./image/sling:resourceType"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                    value="foundation/components/image"/>


                        </items>
                    </columns>
                </items>
            </ImageTab>
            <imageShowTab
                jcr:primaryType="nt:unstructured"
                jcr:title="Random Settings"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <randomShow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="The probability of showing an additional image. Enter a value between 0 and 100."
                                fieldLabel="Randomness Percentage"
                                max="100"
                                min="0"
                                name="./randomCutoffValue"/>
                        </items>
                    </columns>
                </items>
            </imageShowTab>
        </items>
    </content>
</jcr:root>
